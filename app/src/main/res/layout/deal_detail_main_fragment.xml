<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical" android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:layout_marginTop="@dimen/dimen_45_dp"    android:paddingTop="@dimen/dimen_15_dp"    android:paddingEnd="@dimen/dimen_15_dp"    android:paddingStart="@dimen/dimen_15_dp"    android:paddingBottom="@dimen/dimen_5_dp"    >    <LinearLayout        android:layout_height="wrap_content"        android:layout_width="match_parent"        android:orientation="horizontal"        >        <TextView            android:id="@+id/dealName_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:paddingRight="@dimen/dimen_5_dp"            android:layout_marginBottom="@dimen/dimen_5_dp"            android:textSize="18sp"            android:gravity="center"            style="@style/TextAppearanceMedium.FontPath"            android:layout_centerHorizontal="true"            android:textColor="@android:color/black"            android:text="Himanshu Enterprises"            android:textStyle="bold"            />        <TextView            android:id="@+id/isSponseredTextview"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textAppearance="?android:attr/textAppearanceSmall"            android:text="Sponsored"            android:textSize="12sp"            style="@style/TextAppearanceLight.FontPath"            android:layout_marginRight="20dp"            android:paddingBottom="1dp"            android:paddingTop="1dp"            android:paddingEnd="4dp"            android:paddingStart="4dp"            android:textColor="#FFFFFF"            android:background="@color/sponsored_color"            android:layout_gravity="right|top" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        >        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <LinearLayout                android:layout_height="wrap_content"                android:layout_width="match_parent"                android:orientation="horizontal"                >                <TextView                    android:id="@+id/dealStatusTextView"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingBottom="1dp"                    android:paddingTop="1dp"                    android:paddingEnd="4dp"                    android:paddingStart="4dp"                    android:textSize="12sp"                    android:gravity="center"                    style="@style/TextAppearanceLight.FontPath"                    android:layout_centerHorizontal="true"                    android:background="@color/workflow_step_background"                    android:textColor="@color/open_text_color"                    android:text="Open"/>                <TextView                    android:id="@+id/dealAmountTextView"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="12sp"                    android:layout_marginLeft="@dimen/dimen_5_dp"                    android:paddingBottom="1dp"                    android:paddingTop="1dp"                    android:paddingEnd="4dp"                    android:paddingStart="4dp"                    android:background="@color/detail_ammount_color"                    android:textColor="@color/white"                    style="@style/TextAppearanceLight.FontPath"                    android:text="25 Lacs"                    />            </LinearLayout>            <LinearLayout                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:orientation="horizontal"                android:layout_marginTop="@dimen/dimen_5_dp"                >                <TextView                    android:id="@+id/addresstextView"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:drawableLeft="@drawable/ic_location_on_48pt"                    android:drawablePadding="@dimen/dimen_5_dp"                    android:textSize="15sp"                    android:layout_marginTop="@dimen/dimen_5_dp"                    android:gravity="center_vertical|center_horizontal"                    style="@style/TextAppearanceRegular.FontPath"                    android:layout_centerHorizontal="true"                    android:textColor="@color/location_color"                    android:text="New Delhi,India"/>            </LinearLayout>        </LinearLayout>        <View            android:layout_width="0dp"            android:layout_height="0dp"            android:layout_weight="1"            />        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:clickable="true"            style="@android:style/Widget.ActionButton">            <ImageView                android:id="@+id/messeageImageView"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:gravity="center"                android:layout_gravity="center"                android:layout_margin="0dp"                android:contentDescription="discussion"                android:background="@drawable/ic_comments_detail"                />            <TextView                android:id="@+id/discussion_count"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="10sp"                android:text="100"                android:textColor="@color/black"                android:textStyle="bold"                android:paddingLeft="@dimen/dimen_2_dp"                android:paddingRight="@dimen/dimen_2_dp"                android:paddingTop="@dimen/dimen_2_dp"                android:paddingBottom="@dimen/dimen_2_dp"                android:gravity="center_horizontal|center_vertical"                android:layout_gravity="right|top"                android:background="@drawable/comments_badge_textview"                />        </FrameLayout>    </LinearLayout>    <LinearLayout        android:layout_height="wrap_content"        android:layout_width="match_parent"        android:orientation="horizontal"        >        <TextView            android:id="@+id/sectionTextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="15sp"            android:gravity="center"            android:layout_centerHorizontal="true"            android:textColor="@android:color/black"            android:text="Travel,Mobile App"/>        <View            android:layout_width="0dp"            android:layout_height="0dp"            android:layout_weight="1"            />        <TextView            android:id="@+id/assigneeName"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="13sp"            android:drawableLeft="@drawable/ic_ian_logo"            android:drawablePadding="@dimen/dimen_5_dp"            android:gravity="center_vertical|center_horizontal"            style="@style/TextAppearanceRegular.FontPath"            android:layout_centerHorizontal="true"            android:textColor="@android:color/black"            android:text="Subrahmanyam Chidambram"/>    </LinearLayout>    <View        android:layout_width="match_parent"        android:layout_height="@dimen/dimen_0.5_dp"        android:background="@color/black"        android:layout_marginTop="@dimen/dimen_5_dp"        android:layout_marginBottom="5dp"        />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="1"        >        <ScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/dealDescriptionTextView"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                style="@style/TextAppearanceRegular.FontPath"                android:textColor="@color/black"                android:text="@string/app_name"                />        </ScrollView>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/dealTypeTextview"            android:textColor="@color/status_color"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="12sp"            android:gravity="center"            style="@style/TextAppearanceMedium.FontPath"            android:layout_centerHorizontal="true"            android:textStyle="italic"            android:text="Operational less than 1 year"/>        <View            android:layout_width="0dp"            android:layout_height="0dp"            android:layout_weight="1"            />        <TextView            android:id="@+id/dealdateTextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="12sp"            android:gravity="center"            style="@style/TextAppearanceMedium.FontPath"            android:textColor="@color/text_color"            android:layout_centerHorizontal="true"            android:text="31/03/2016"/>    </LinearLayout>    <View        android:layout_width="match_parent"        android:layout_height="@dimen/dimen_0.5_dp"        android:background="@color/black"        />    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="@dimen/dimen_5_dp"        android:orientation="horizontal"        >        <ImageView            android:id="@+id/dealceoImage"            android:layout_height="65dp"            android:layout_width="65dp"            android:layout_marginTop="@dimen/dimen_5_dp"            android:background="@drawable/ic_ent_image"            />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="@dimen/dimen_5_dp"            android:orientation="vertical"            android:layout_gravity="center"            >            <TextView                android:id="@+id/dealByTextView"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:text="Murtuza Bookwala"                style="@style/TextAppearanceRegular.FontPath"                android:textSize="13sp"                android:padding="@dimen/dimen_1_dp"                />            <TextView                android:id="@+id/dealByDesgTextView"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                style="@style/TextAppearanceRegular.FontPath"                android:text="Founder,CEO"                android:textSize="12sp"                />        </LinearLayout>        <View            android:layout_width="0dp"            android:layout_height="0dp"            android:layout_weight="1"            />        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginTop="@dimen/dimen_3_dp"            android:clickable="true"            style="@android:style/Widget.ActionButton">            <ImageView                android:id="@+id/attachmentImageView"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:gravity="center"                android:layout_gravity="center"                android:layout_margin="0dp"                android:contentDescription="discussion"                android:background="@drawable/ic_attachment_round"                />            <TextView                android:id="@+id/attachment_count"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="10sp"                android:text="100"                android:textColor="@color/black"                android:textStyle="bold"                android:paddingLeft="@dimen/dimen_2_dp"                android:paddingRight="@dimen/dimen_2_dp"                android:paddingTop="@dimen/dimen_2_dp"                android:paddingBottom="@dimen/dimen_2_dp"                android:gravity="center_horizontal|center_vertical"                android:layout_gravity="right|top"                android:background="@drawable/attachments_badge_textview"                />        </FrameLayout>    <!--    <TextView            android:layout_height="match_parent"            android:layout_width="wrap_content"            android:text="Attachments"            android:gravity="center"            android:textSize="13sp"            android:padding="@dimen/dimen_1_dp"            />-->    </LinearLayout></LinearLayout>