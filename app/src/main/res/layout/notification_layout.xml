<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/hotlist_bell"
        android:src="@drawable/ic_notifications_black_48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:contentDescription="bell"
        />

    <TextView
        android:id="@+id/hotlist_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:text="100"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingLeft="@dimen/dimen_2_dp"
        android:paddingRight="@dimen/dimen_2_dp"
        android:paddingTop="@dimen/dimen_2_dp"
        android:paddingBottom="@dimen/dimen_2_dp"
        android:layout_marginTop="@dimen/dimen_5_dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/notificationcircular_textview"
       />
</FrameLayout>