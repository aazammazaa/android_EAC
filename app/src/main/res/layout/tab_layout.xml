<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/frame"    android:layout_width="match_parent"    android:orientation="vertical"    android:layout_height="match_parent">    <include        layout="@layout/actionbar_laytout"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <com.tmz.ian.view.SlidingTabLayout        android:id="@+id/tabs"        app:tabGravity="fill"        app:tabMode="fixed"        android:background="@color/dim_foreground_disabled_material_dark"        app:tabIndicatorColor="@color/toolseccolor"        app:tabSelectedTextColor="@color/toolseccolor"        app:tabTextColor="@color/bright_foreground_disabled_material_light"        android:layout_width="match_parent"        android:layout_height="wrap_content">    </com.tmz.ian.view.SlidingTabLayout><android.support.v4.view.ViewPager        android:id="@+id/viewpager"        android:layout_width="match_parent"        android:layout_height="match_parent"        >    </android.support.v4.view.ViewPager></LinearLayout>