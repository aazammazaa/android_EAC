<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="@color/white"    android:paddingTop="1dp"    android:paddingBottom="20dp"    android:paddingLeft="15dp"    tools:context=".fragment.FavoriteListFragment">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Investment Announcement"        style="@style/TextAppearanceLight.FontPath"        android:textSize="12sp"        android:layout_gravity="right"        android:paddingLeft="5dp"        android:paddingRight="5dp"        android:paddingBottom="2dp"        android:textColor="@color/black"        android:id="@+id/dealStatusTextView"        android:background="@color/workflow_step_background"        />    <TextView        android:id="@+id/dealName_TextView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="User Name"        android:textStyle="bold"        android:textSize="19sp"        style="@style/TextAppearanceMedium.FontPath"        android:layout_gravity="center_vertical"        android:textAppearance="?android:attr/textAppearanceLarge"        />   <FrameLayout       android:layout_width="match_parent"       android:layout_height="wrap_content"       android:orientation="horizontal">        <TextView            android:id="@+id/dealBy_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            style="@style/TextAppearanceRegular.FontPath"            android:text="Medium Text"            android:textSize="16sp"            android:textColor="@color/ent_name_color"            android:gravity="center_vertical|center_horizontal"            android:drawableLeft="@drawable/ic_person_48pt"            android:drawablePadding="@dimen/dimen_5_dp"            android:paddingTop="5dp"            android:paddingBottom="@dimen/dimen_5_dp"            />        <TextView            android:id="@+id/dealType_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            style="@style/TextAppearanceMedium.FontPath"            android:text="Operational"            android:layout_marginRight="20dp"            android:textSize="13sp"            android:textStyle="italic"            android:textColor="@color/status_color"            android:layout_gravity="right|center"            />   </FrameLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:id="@+id/dealSector_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Small Text"            android:gravity="center_vertical"            android:textColor="@color/black"            style="@style/TextAppearanceRegular.FontPath"            android:layout_weight="1"            android:layout_gravity="center_vertical"             />        <TextView            android:id="@+id/requiredMoney_TextView"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            style="@style/TextAppearanceRegular.FontPath"            android:text="â‚¹ 25 L"            android:layout_marginRight="20dp"            android:textColor="#000000"            />    </LinearLayout>     <FrameLayout         android:layout_width="match_parent"         android:layout_height="wrap_content"         android:layout_marginTop="10dp"         android:orientation="horizontal">         <TextView             android:layout_width="wrap_content"             android:layout_height="wrap_content"             android:text="Sponsored"             android:textSize="12sp"             android:layout_marginRight="20dp"             android:paddingBottom="1dp"             android:paddingTop="1dp"             android:paddingEnd="4dp"             android:paddingStart="4dp"             android:textColor="@color/white"             android:visibility="gone"             android:background="@color/sponsored_color"             style="@style/TextAppearanceLight.FontPath"             android:id="@+id/sponseredtextView"             android:layout_gravity="right|top" />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="left|center"            android:orientation="horizontal">             <ImageView                 android:layout_width="24dp"                 android:layout_height="24dp"                 android:scaleType="fitXY"                 android:id="@+id/commentsImageView"                 android:src="@drawable/ic_comment_48pt"                 android:layout_gravity="left|center" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="2"                android:layout_marginLeft="10dp"                android:layout_gravity="center"                android:textColor="#000000"                style="@style/TextAppearanceRegular.FontPath"                android:id="@+id/comments_counts"                />            <ImageView                android:layout_width="24dp"                android:layout_height="24dp"                android:scaleType="fitXY"                android:layout_marginLeft="30dp"                android:id="@+id/meeting_imageView"                android:src="@drawable/ic_meeting"                android:layout_gravity="left|center" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                style="@style/TextAppearanceRegular.FontPath"                android:text="2"                android:layout_marginLeft="10dp"                android:layout_gravity="center"                android:textColor="#000000"                android:id="@+id/meetings_counts"                />        </LinearLayout> </FrameLayout></LinearLayout>